
<div class="container table-responsive-sm mt-2 col-6">
    <h1 class="text-center display-5 mt-3">Liste Séries</h1>
    <table class="table table-hover table-striped">
        <thead class="table-primary">
            <tr>
                <th class="col-2 text-secondary">Titre</th>
                <th class="col-2 text-secondary text-center">Date de sortie</th>
                <th class="col-2 text-secondary text-center">Nb éps</th>
            </tr>
            <tbody>
            {{#each series}}
            {{>animes/tablesseries data=this}}
            {{/each}}
            </tbody>
        </thead>
    </table>
</div>

