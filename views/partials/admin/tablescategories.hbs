<tr>
  <th class="text-center">{{this.name}}</th>
  <th class="text-center">{{formatDate this.created_at "DD-MM-YYYY"}}</th>
  <th class="text-center">{{formatDate this.edited_at "DD-MM-YYYY"}}</th>
  <th class="text-center">
    <a role="button" data-bs-toggle="modal" data-bs-target="#Modal_edit_categories"><i
        class="bi bi-pencil-square"></i></a>
    <a role="button" data-bs-toggle="modal" data-bs-target="#Modal_delete_categories"><i class="bi bi-trash3"></i></a>
  </th>
</tr>

<!-- modal 1 -->
<div class="modal" tabindex="-1" id="Modal_edit_categories" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Modifier</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">

        <!-- formulaire -->
        <form id="categoriesForm" action="/admin/categories/{{this.Id_categories}}?_method=PUT" method="post"
          enctype="multipart/form-data">
          <div class="row g-3">
            <div>
              <input type="text" class="form-control" placeholder="Nom" aria-label="name" name="name_categories">
            </div>
            <div class="mb-3">
              <label for="formFile" class="form-label">Image de couverture</label>
              <input class="form-control" type="file" id="formFile" name="edit_image">
            </div>
          </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-primary" data-bs-dismiss="modal">Modifier</button>
            <button type="button" class="btn btn-danger">Annuler</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- modal 2 -->
<div class="modal" tabindex="-1" id="Modal_delete_categories" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Supprimer</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <form class="modal-body" action="/admin/categories/{{id}}?_method=DELETE" method="post" enctype="multipart/form-data">
        <input type="hidden" name="_method" value="DELETE">
        <p>Souhaitez-vous supprimer la cat√©gorie ?</p>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary" data-bs-dismiss="modal">Supprimer</button>
          <button type="button" class="btn btn-danger">Annuler</button>
        </div>
      </form>
    </div>
  </div>
</div>