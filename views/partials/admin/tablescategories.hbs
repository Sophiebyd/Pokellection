<tr>
  <th>{{this.name}}</th>
  <th>{{this.created_at}}</th>
  <th>{{this.edited_at}}</th>
  <th class="text-center">
    <a role="button" data-bs-toggle="modal" data-bs-target="#Modal_edit_user"><i class="bi bi-pencil-square"></i></a>
    <a role="button" data-bs-toggle="modal" data-bs-target="#Modal_delete_user"><i class="bi bi-trash3"></i></a>
  </th>
</tr>

<!-- modal 1 -->
<div class="modal" tabindex="-1" id="Modal_edit_user" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Modifier</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">

        <!-- formulaire -->
        <form>
          <div class="row g-3">
            <div>
              <input type="text" class="form-control" placeholder="Nom" aria-label="name" name="name">
            </div>
            <div class="mb-3">
              <label for="formFile" class="form-label">Image de couverture</label>
              <input class="form-control" type="file" id="formFile">
            </div>
          </div>
        </form>

      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Modifier</button>
        <button type="button" class="btn btn-danger">Annuler</button>
      </div>
    </div>
  </div>
</div>

<!-- modal 2 -->
<div class="modal" tabindex="-1" id="Modal_delete_user" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Supprimer</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <p>Souhaitez-vous supprimer la cat√©gorie ?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary" data-bs-dismiss="modal">Supprimer</button>
        <button type="button" class="btn btn-danger">Annuler</button>
      </div>
    </div>
  </div>
</div>