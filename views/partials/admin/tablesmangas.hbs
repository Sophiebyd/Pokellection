<tr>
  <th>{{this.titlemangas}}</th>
  <th class="text-center"><a href="/mangas/{{this.Id_articles}}" class="text-decoration-none">{{this.Id_articles}}</a>
  </th>
  <th class="text-center">{{formatDate this.created_at "DD-MM-YYYY"}}</th>
  <th class="text-center">{{formatDate this.edited_at "DD-MM-YYYY"}}</th>
  <th class="text-center">
    <a role="button" data-bs-toggle="modal" data-bs-target="#{{this.Id_articles}}modal_edit_mangas"><i class="bi bi-pencil-square"></i></a>
        <a role="button" data-bs-toggle="modal" data-bs-target="#{{this.Id_articles}}modal_picture_mangas"><i
        class="bi bi-image"></i></a>
    <a role="button" data-bs-toggle="modal" data-bs-target="#{{this.Id_articles}}modal_delete"><i class="bi bi-trash3"></i></a>
  </th>
</tr>

<!-- modal 1 -->
<div class="modal" tabindex="-1" id="{{this.Id_articles}}modal_edit_mangas" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Modifier</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">

        <!-- formulaire -->
        <form action="/admin/mangas/{{this.Id_articles}}?_method=PUT" method="post" enctype="multipart/form-data">
          <div class="row g-3">
            <div>
              <textarea class="form-control" rows="2" placeholder="Résumé"
                name="text"></textarea>
            </div>
            <div>
              <input type="text" class="form-control" placeholder="Titre" name="titlemangas">
            </div>
            <div>
              <input type="date" class="form-control" placeholder="Parution" name="parution">
            </div>
            <div>
              <input type="number" class="form-control" name="nb" placeholder="Nombre de tomes">
            </div>
            <div>
              <input type="text" class="form-control" placeholder="Lien 1" name="lien_1">
            </div>
            <div>
              <input type="text" class="form-control" placeholder="Lien 2" name="lien_2">
            </div>
            <div>
              <input type="text" class="form-control" placeholder="Lien 3" name="lien_3">
            </div>
            <div>
              <input type="text" class="form-control" placeholder="Lien 4" name="lien_4">
            </div>
          </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-primary" data-bs-dismiss="modal">Modifier</button>
            <button type="button" class="btn btn-danger">Annuler</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- modal picture -->
<div class="modal" tabindex="-1" id="{{this.Id_articles}}modal_picture_mangas" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Modifier image</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form action="/admin/mangas/{{this.Id_articles}}?_method=PUT" method="post"
          enctype="multipart/form-data">
          <div class="mb-3">
            <label for="formFile" class="form-label">Image de couverture</label>
            <input class="form-control" type="file" id="formpicture" name="edit_image">
          </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-primary" data-bs-dismiss="modal">Modifier</button>
            <button type="button" class="btn btn-danger">Annuler</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

<!-- modal delete -->
<div class="modal" tabindex="-1" id="{{this.Id_articles}}modal_delete" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Supprimer</h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <form class="modal-body" action="/admin/{{this.Id_articles}}?_method=DELETE" method="post">
        <p>Souhaitez-vous supprimer le jeu ?</p>
        <div class="modal-footer">
          <button type="submit" class="btn btn-primary" data-bs-dismiss="modal">Supprimer</button>
          <button type="button" class="btn btn-danger">Annuler</button>
        </div>
      </form>
      </div>
    </div>
  </div>
</div>